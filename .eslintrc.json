{
    "env": {
        "node": true,
        "mocha": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended",
        "plugin:node/recommended",
        "plugin:promise/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 10,
        "sourceType": "module"
    },
    "plugins": [
      "jsdoc",
      "promise"
    ],
    "rules": {
        "comma-dangle": 2,
        "comma-spacing": [
            1,
            {
                "before": false,
                "after": true
            }
        ],
        "semi": ["error", "always"],
        "node/no-unpublished-require": ["error", {
            "allowModules": ["chai", "eslint"]
        }],
        "no-unused-vars": 1,
        "quotes": ["error", "single"]
    },
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
