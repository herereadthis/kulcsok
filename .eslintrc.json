{
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": 2,
        "comma-spacing": [
            1,
            {
                "before": false,
                "after": true
            }
        ],
        "semi": ["error", "always"],
        "no-unused-vars": 1,
        "quotes": ["error", "single"]
    }
}
